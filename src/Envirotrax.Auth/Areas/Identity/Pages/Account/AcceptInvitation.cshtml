@page
@model AcceptInvitationModel

@{
    ViewData["Title"] = "Accept Invitation";
}

<div>
    <div class="text-center">
        <h1 class="h2">
            Create Account
        </h1>
    </div>
</div>

<div class="d-flex align-items-center justify-content-center bg-light">
    <div class="card shadow-sm section-card">
        <div class="card-header border-bottom-0 text-center text-white bg-info fw-semibold fs-5 rounded-top">
            Account Access and Security
        </div>

        <div class="card-body border border-info rounded-bottom">
            <p>
                Please enter a password below to finish your registration.
            </p>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <input asp-for="TokenId" type="hidden" />
                <input asp-for="Token" type="hidden" />

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label fw-bold"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-primary px-5">
                        Accept Invitation
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}