@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="row">
    <div class="col-12 text-center">
        <h2>
            Account Authorization
        </h2>
    </div>
</div>
<div class="d-flex align-items-center justify-content-center bg-light">
    <div class="card shadow-sm" style="max-width: 680px; width: 100%; border-radius: 12px;">

        <div class="card-header text-center text-white bg-info fw-semibold fs-5 rounded-top">
            Send Account Security Access Code
        </div>

        <div class="card-body p-4">
            <p class="text-secondary mb-3">
                If you are having trouble accessing your account, a one time security code can be sent to your
                email address or cell phone number stored with your account information.
            </p>

            <p class="fw-semibold mb-3">
                Enter the email address used to access your account.
            </p>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2" role="alert"></div>

                <div class="d-flex mb-3">
                    <input asp-for="Input.Email"
                           class="form-control form-control-lg me-2"
                           autocomplete="username"
                           aria-required="true"
                           placeholder="Email Address" />

                    <button type="submit" class="btn btn-primary px-4 fw-semibold">
                        CONTINUE
                    </button>
                </div>

                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
