@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<section id="divPageTitle" class="container-lg page-title">
    <div class="text-center">
        <h2>Account Login</h2>
    </div>
</section>

<section id="sectionLogin" runat="server" class="card shadow-sm">
    <div class="card-header border-bottom-0 text-center text-white bg-info fw-semibold fs-5 rounded-top">
        <h3 class="h4 mb-0">Existing Account Login</h3>
    </div>
    <div class="card-body border border-info rounded-bottom">
        <div class="w-100">
            If you have an existing account, please login with the User ID and Password you specified when creating the
            account. If you do not know
            your User ID or Password, use the <b>Retrieve Lost Login</b> link to have your login information sent to the
            email address you specified when you created
            the account.
        </div>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly"
                 class="text-danger text-center mb-3"
                 role="alert"></div>

            <div class="row justify-content-center mt-4">
                <div class="col-sm-12 col-md-6 col-lg-5 col-xl-4">

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label fw-bold">
                            User ID / Email Address
                        </label>
                        <input asp-for="Input.Email"
                               class="form-control"
                               autocomplete="username"
                               aria-required="true"
                               placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label fw-bold">
                            Password
                        </label>

                        <div class="input-group">
                            <input asp-for="Input.Password"
                                   class="form-control"
                                   autocomplete="current-password"
                                   aria-required="true"
                                   placeholder="Enter you password" />

                            <button type="button"
                                    onclick="showHidePassword(this, '@Html.IdFor(model => model.Input.Password)');"
                                    class="btn p-2">
                                <i id="eyePassword"
                                   class="fa fa-eye"
                                   aria-hidden="true"></i>
                            </button>
                        </div>

                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="mt-4 text-center">
                        <button type="submit"
                                id="btnLogin"
                                class="btn btn-primary px-5">
                            <i class="fa-solid fa-right-to-bracket me-2"></i>
                            LOGIN
                        </button>
                    </div>

                    <div class="mt-4 text-center">
                        <div>
                            <a asp-page="./ForgotPassword">
                                I forgot my password
                            </a>
                        </div>
                        <div class="mt-3">
                            <a asp-page="./ResendEmailConfirmation">
                                Resend email confirmation
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>
</section>

<section id="sectionCreateAccount" runat="server" class="card mt-3">
    <div class="card-header border-bottom-0 text-center text-white bg-info fw-semibold fs-5 rounded-top">
        <h3 class="h4 mb-0">Create a New Account</h3>
    </div>
    <div class="card-body border border-info rounded-bottom">
        <p class="text-center">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-link link-button text-decoration-none"
               style="width:200px;">
                <i class="fas fa-user-circle"></i>&nbsp;&nbsp;Create Account
            </a>
        </p>
        <p style="text-align: center;">
            <a class="a-blue" href="Quick Start Guide.pdf" target="_blank">Click here to download a Quick Start
                Guide.</a>
        </p>
    </div>
</section>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}