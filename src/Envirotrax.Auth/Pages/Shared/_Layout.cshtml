<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
@*     <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Envirotrax.Auth.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" /> *@

    <link rel="stylesheet" href="~/css/site.css"/>
@*     <link rel="stylesheet" href="~/css/footer.css"/>
 *@    <link rel="stylesheet" href="~/font-awesome/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column flex-fill">
    <nav class="navbar navbar-expand-lg bg-primary bg-gradient" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="@Url.Content("~/images/header/envirotrax_logo_navbar.svg")"
                     alt="Vepo LLC" class="vp-logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                </ul>
            </div>
        </div>
    </nav>
           
    <div class="container">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <footer id="footer" class="footer bg-footer text-light pt-4 pb-4">
        <div class="container">
            <div class="row gy-4">

                <div class="col-lg-4">
                    <div class="theme-toggle">
                        <em>Light Theme</em>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="chkDarkMode">
                        </div>
                        <em>Dark Theme</em>
                    </div>


                    <div class="footer-card bg-white text-dark p-4 rounded-4 shadow d-flex flex-column align-items-center justify-content-center text-center">
                        <img src="@Url.Content("~/images/footer/vepo_logo.svg")"
                             class="img-fluid mb-3"
                             style="max-height:60px">

                        <p class="mb-0 small">
                            <strong>Phone:</strong>
                            <a href="tel:(281)476-6886" class="text-primary text-decoration-none">(281) 476-6886</a><br>
                            <strong>Email:</strong>
                            <a href="mailto:team@envirotrax.com" class="text-primary text-decoration-none">
                                team@envirotrax.com
                            </a>
                        </p>
                    </div>
                </div>

                <div class="col-lg-4">
                    <h5>Site Links</h5>
                    <ul class="footer-links">
                        <li><i class="fas fa-angle-double-right"></i><a href="/">Home</a></li>
                        <li><i class="fas fa-angle-double-right"></i><a href="/">Management Programs</a></li>
                        <li><i class="fas fa-angle-double-right"></i><a href="/">Services</a></li>
                        <li><i class="fas fa-angle-double-right"></i><a href="/">About Us</a></li>
                        <li><i class="fas fa-angle-double-right"></i><a href="/">Privacy Policy</a></li>
                        <li><i class="fas fa-angle-double-right"></i><a href="/">Accessibility Statement</a></li>
                    </ul>
                </div>

                <div class="col-lg-4">
                    <h5>Our Management Programs</h5>
                    <ul class="footer-links">
                        <li><i class="fas fa-angle-double-right"></i><a href="/">Backflow - Cross Connection Management</a></li>
                        <li><i class="fas fa-angle-double-right"></i><a href="/">CSI Site Inspections</a></li>
                        <li><i class="fas fa-angle-double-right"></i><a href="/">FOG Inspection & Waste Disposal</a></li>
                        <li><i class="fas fa-angle-double-right"></i><a href="/">W.I.S.E. Guys Irrigation Evaluations</a></li>
                    </ul>
                </div>

            </div>

            <hr>
            <div class="footer-bottom">
                <p>Vepo, LLC is not affiliated with New York-based Vepo Solutions.</p>
                <p>© Copyright <strong>Vepo LLC</strong>. All Rights Reserved</p>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
